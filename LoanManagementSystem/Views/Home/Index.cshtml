@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card-img-top {
        position: relative;
        overflow: hidden;
        height: 300px;
    }

        .card-img-top img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            max-width: 100%;
            transition: transform 0.2s ease-in-out;
        }

            .card-img-top img:hover {
                transform: scale(1.4);
            }

    .card {
        border-radius: 30px;
        overflow: hidden;
        object-fit: cover;
    }

    .card-body {
        background-color: #004260;
    }

    .card-text-custom {
        height: 90px; /* Set a fixed height */
        overflow: hidden; /* Hide any overflowing text */
        text-overflow: ellipsis; /* Add ellipsis if the text overflows MAMA MO SET*/
    }

    .btn {
        border-radius: 30px;
    }

    .carousel-item {
        height: 400px;
    }

        .carousel-item img {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

    .carousel {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .carousel-inner {
        margin: 0;
        padding: 0;
    }

    .carousel-caption {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
        padding: 10px;
        width: 100%;
        height: 20%;
    }

    .bg-secondary-opacity {
        background-color: rgba(128, 128, 128, 0.8);
    }

</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div id="carouselExampleSlidesOnly" class="carousel slide mb-4 w-100" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/src/EPAHIRAM.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block bg-secondary-opacity">
                            <h5 class="fw-bold ls-tight text-light">ePahiram</h5>
                            <p>Empower Your Financial Futurre with Our ePahiram: Calculate your Loan, Unlock Gadgets!</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/src/LoanCalculator.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block bg-secondary-opacity">
                            <h5 class="fw-bold ls-tight text-light">Loan Calculator</h5>
                            <p>Take Control of Your Finances With Our Loan Calculator: Plan, Calculate, And Achieve Your Financial Goals</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/src/GadgetLoan.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block bg-secondary-opacity">
                            <h5 class="fw-bold ls-tight text-light">Gadget Loan</h5>
                            <p>Upgrade Your Lifestyle with our Gadget Loan: Get the Latest Gadgets Now, Pay Later!</p>
                        </div>
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselExampleSlidesOnly" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleSlidesOnly" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-img-top">
                <a asp-area="" asp-controller="PersonalLoanCalculator" asp-action="LoanCalculator">
                    <img src="~/src/LoanCalcuSquare1.jpg" alt="Card image cap">
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title fw-bold ls-tight text-light">Loan Calculator</h5>
                <p class="card-text card-text-custom  text-white">Loan calculators can help you figure out your monthly payments on different types of loans</p>
                <a asp-area="" asp-controller="PersonalLoanCalculator" asp-action="LoanCalculator" class="btn btn-light mt-3 mx-auto d-block ">View</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="card">
            <div class="card-img-top">
                <a asp-area="" asp-controller="GadgetLoan" asp-action="GetAllGadgets">
                    <img src="~/src/GadgetloanSquare1.jpg" alt="Card image cap">
                </a>
            </div>
            <div class="card-body">
                <h5 class="card-title fw-bold ls-tight text-light">Gadget Loan</h5>
                <p class="card-text card-text-custom text-white">A gadget loan is a financial product that allows you to borrow money for a specific type of gadget.</p>
                <a asp-area="" asp-controller="GadgetLoan" asp-action="GetAllGadgets" class="btn btn-light mt-3 mx-auto d-block">View</a>
            </div>
        </div>
    </div>
</div>
