@using System.Globalization;
@using LoanManagementSystem.Models;
@model PersonalLoanCalculator

<style>
    .btn-custom{
        background-color: #004260;
        color: white;
    }

    .center{
        text-align: center;
    }

    .thead-custom{
        background-color: #004260;
        color: white;
    }

    .blue-text {
        font-family: 'Montserrat', sans-serif;
        font-size: 6vw;
        color: #004260;
    }

    .red-text {
        font-family: 'Montserrat', sans-serif;
        font-size: 6vw;
        color: #ff473c;
    }
</style>


<div class="container">
    <div class="mb-6">
    <div class="row">
        <div class="result mb-6">
            <div>
                <span class="blue-text">Loan</span><span class="red-text">Calculator</span>
            </div>
            <form asp-action="LoanCalculator" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                <div class="result mb-3">
                    <label for="principal">Principal Amount (Loan Amount):</label>
                    <input type="text" class="form-control" id="principal" name="PrincipalAmount" value="@Model.PrincipalAmount" />
                </div>
                <div class="result mb-3">
                    <label for="rate">(Fixed) Annual Interest Rate:</label>
                    <input type="text" class="form-control" id="rate" name="AnualRate" value="12.00" readonly />
                </div>
                <div class="result mb-3">
                    <label for="term">Loan Term (Refer To The Table Below):</label>
                    <input type="text" class="form-control" id="numberofterms" name="NumberOfTerms" value="@Model.NumberOfTerms" />
                </div>
                <button type="submit" class="btn btn-custom btn-block btn-lg mb-5">Calculate</button>
                    
            </form>
            @if (Model.Payment.HasValue)
            {
                <div class="result mb-3 center">
                    <h3>Monthly Payment: </h3>
                    <p class="result-value h4">@Model.Payment.Value.ToString("C", new CultureInfo("en-PH"))</p>
                    <p class="result-description">This is the monthly payment for the loan.</p>
                </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger mt-5"></div>  
        <div class="table-responsive rounded">
            <h2 class="fw-bold ls-tight mt-5">Loan Description</h2>
            <table class="table table-bordered mb-3">
                <thead class="thead-custom">
                    <tr>
                        <th>Loan Terms (months)</th>
                        <th>(Fixed) Interest Rate (annual)</th>
                        <th>Loan Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>12</td>
                        <td>12%(12.00)</td>
                        <td>Php 50,000 - Php 500,000</td>
                    </tr>
                    <tr>
                        <td>24</td>
                        <td>12%(12.00)</td>
                        <td>Php 50,000 - Php 500,000</td>
                    </tr>
                    <tr>
                        <td>36</td>
                        <td>12%(12.00)</td>
                        <td>Php 50,000 - Php 500,000</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="table-responsive rounded">
            <h2 class="fw-bold ls-tight">Eligibility Criteria</h2>
            <table class="table table-bordered">
                <thead class="thead-custom">
                    <tr>
                        <th>Criteria</th>
                        <th>Requirement</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Minimum Loan Amount</td>
                        <td>Php 50,000</td>
                    </tr>
                    <tr>
                        <td>Maximum Loan Amount</td>
                        <td>Php 500,000</td>
                    </tr>
                    <tr>
                        <td>Minimum Loan Term</td>
                        <td>12 months</td>
                    </tr>
                    <tr>
                        <td>Maximum Loan Term</td>
                        <td>36 months</td>
                    </tr>
                    <tr>
                        <td>Minimum Annual Income</td>
                        <td>Php 25,000</td>
                    </tr>
                    <tr>
                        <td>Minimum Credit Score</td>
                        <td>500</td>
                    </tr>
                    <tr>
                        <td>Supporting Documents</td>
                        <td>(2) Valid ID's, Detailed Location Map, NBI Clearance, Any Valid Payroll Slip (Photocopy)'</td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
