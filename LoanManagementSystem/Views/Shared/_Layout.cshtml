@inject SignInManager<ApplicationUser> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoanManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoanManagementSystem.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>

<body>
    <style>
        .navbar {
            height: 80px;
        }

        .navbar-custom {
            background-color: #004260;
        }

            .navbar-custom .nav-link {
                color: white;
            }
        
            .footer-custom{
                margin-top: 60px;
                padding-top: 60px
            }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/src/Logo.jpg" alt="Logo" height="50">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="PersonalLoanCalculator" asp-action="LoanCalculator">Loan Calculator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="GadgetLoan" asp-action="GetAllGadgets">Gadget Loan</a>
                        </li>
                    </ul>
                    @if (_signInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav">
                            @if (User.IsInRole("Registered"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="UGadgetLoan" asp-action="MyPurchases">My Purchase</a>
                                </li>
                            }
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Administrator"
                                    asp-action="GetAllUsers">Manage Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="UGadgetLoan"
                                    asp-action="Purchases">View Purchases</a>
                                </li>
                            }
                        </ul>
                    }
                    <ul class="navbar-nav">
                        @if (_signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="LogOut">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

        <!-- Bootstrap JS -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - LoanManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer>*@
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<div class="container footer-custom">
    <footer class="row row-cols-5 py-5 my-5 border-top">
    <div class="col">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="/src/whitelogo.png" alt="Logo" height="80">
        </a>
        <p class="text-muted mx-3">© 2023</p>
    </div>
    <div class="col"></div>
    <div class="col">
        <h5>Services</h5>
        <ul class="nav flex-column">
            <li class="nav-item mb-2">
               <a class="nav-link p-0 text-muted" asp-area="" asp-controller="PersonalLoanCalculator" asp-action="LoanCalculator">Loan Calculator</a>
            </li>
            <li class="nav-item mb-2">
               <a class="nav-link p-0 text-muted" asp-area="" asp-controller="GadgetLoan" asp-action="GetAllGadgets">Gadget Loan</a>
            </li>
        </ul>
    </div>
    <div class="col">
        <h5>Social Media</h5>
        <ul class="nav flex-column">
              <li class="nav-item mb-2">
                    <a href="https://www.facebook.com/cebuanalhuillierpawnshop" class="nav-link p-0 text-muted">Facebook</a>
              </li>
                <li class="nav-item mb-2">
                    <a href="https://twitter.com/kaCebuana" class="nav-link p-0 text-muted">Twitter</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="https://www.youtube.com/user/cebuanalhuillier" class="nav-link p-0 text-muted">Youtube</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="https://instagram.com/cebuanalhuillier" class="nav-link p-0 text-muted">Instagram</a>
                </li>
        </ul>
    </div>
</footer>
</div>
</html>
