@model List<Purchase>

<h1>My Purchases</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Gadget Loan ID</th>
            <th>Gadget Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Payment Term</th>
            <th>Interest</th>
            <th>Payment</th>
            <th>User ID</th>
            <th>User Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.Id</td>
                <td>@purchase.GadgetLoanId</td>
                <td>@purchase.GadgetLoan.GadgetName</td>
                <td>@purchase.GadgetLoan.Description</td>
                <td>@purchase.GadgetLoan.Price</td>
                <td>@purchase.PaymentTerm</td>
                <td>@purchase.Interest</td>
                <td>@purchase.Payment</td>
                <td>@purchase.ApplicationUserId</td>
                <td>@purchase.ApplicationUser.UserName</td>
            </tr>
        }
    </tbody>
</table>
