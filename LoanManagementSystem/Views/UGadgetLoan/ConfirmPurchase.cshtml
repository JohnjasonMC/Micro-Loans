@model LoanManagementSystem.ViewModel.PurchaseViewModel

<h1>Confirm Purchase</h1>

<div>
    <h3>@Model.GadgetName</h3>
    <p>@Model.Description</p>
    <p><strong>Price:</strong> Php @Model.Price</p>
    <p><strong>Interest:</strong> @Model.Interest%</p>
    <p><strong>Payment Term:</strong> @Model.PaymentTerm Months</p>
    <p><strong>Monthly Payment:</strong> Php @Model.Payment</p>
</div>

<hr />

<form method="post" asp-controller="UGadgetLoan" asp-action="AddPurchase">
    <input type="hidden" name="gadgetId" value="@Model.GadgetLoanId" />
    <input type="hidden" name="paymentTerm" value="@Model.PaymentTerm" />

    <button type="submit" class="btn btn-primary">Purchase Gadget</button>
    <a href="@Url.Action("GetAllGadgets", "GadgetLoan")" class="btn btn-default">Cancel</a>
</form>
