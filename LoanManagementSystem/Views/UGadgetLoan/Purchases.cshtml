@model LoanManagementSystem.ViewModel.AdminPurchasesViewModel

<h1>All Purchases</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Gadget Loan ID</th>
            <th>Gadget Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Payment Term</th>
            <th>Interest</th>
            <th>Payment</th>
            <th>User ID</th>
            <th>User Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model.Purchases)
        {
            <tr>
                <td>@purchase.Id</td>
                <td>@purchase.GadgetLoanId</td>
                <td>@purchase.GadgetName</td>
                <td>@purchase.Description</td>
                <td>@purchase.Price</td>
                <td>@purchase.PaymentTerm</td>
                <td>@purchase.Interest</td>
                <td>@purchase.Payment</td>
                <td>@purchase.UserId</td>
                <td>@purchase.UserName</td>
            </tr>
        }
    </tbody>
</table>